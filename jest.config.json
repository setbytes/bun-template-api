{
  "roots": ["<rootDir>/tests"],
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "!<rootDir>/src/index.ts",
    "!<rootDir>/src/app/**",
    "!<rootDir>/src/**/index.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageProvider": "babel",
  "testEnvironment": "node",
  "transform": {
    ".+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/tests/(.*)": "<rootDir>/tests/$1",
    "@/(.*)": "<rootDir>/src/$1"
  }
}